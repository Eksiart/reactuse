  "repository": {
    "type": "git",
    "url": "git+https://github.com/siberiacancode/reactuse.git"
  },
  "bugs": "https://github.com/siberiacancode/reactuse/issues",
  "keywords": [
    "react",
    "react hooks",
    "react use",
    "use",
    "hooks"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "cli:build": "pnpm --filter @siberiacancode/cli build && pnpm --filter @siberiacancode/cli generate-registry",
    "cli:build:registry": "pnpm --filter useverse build:registry",
    "docs:build": "pnpm --filter @siberiacancode/docs build",
    "core:build:js": "pnpm --filter @siberiacancode/reactuse build:js",
    "lint": "pnpm --recursive lint",
    "format": "prettier --write .",
    "unit-test": "pnpm --recursive run unit-test",
    "lint-staged": "pnpm --recursive run lint-staged",
    "prepare": "husky"
  },
  "devDependencies": {
    "@siberiacancode/eslint": "^2.11.0",
    "@siberiacancode/prettier": "^1.3.0",
    "@types/node": "^22.15.21",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "typescript": "^5.8.3"
  }
